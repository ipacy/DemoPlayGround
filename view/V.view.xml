<mvc:View
        controllerName="vistex.controller.V"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.f"
        xmlns:sh="sap.ushell.ui.launchpad"
        xmlns:control="vistex.control"
        displayBlock="true"
        height="100%">


    <ScrollContainer
            height="100%"
            width="100%"
            vertical="true" id="scrCont">
        <Button id="revealGrid"
                text="To Custom Grid"
                press="onNavTo"
                class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom"/>
        <control:FDashboard
                id="grid1"
                visible="true"
                class="sapUiResponsiveContentPadding"
                allowDenseFill="true"
                snapToRow="true">
            <control:layout>
                <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="1rem"/>
            </control:layout>
            <control:layoutS>
                <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="1rem"/>
            </control:layoutS>
            <control:layoutXS>
                <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="0.5rem"/>
            </control:layoutXS>
            <control:IntegrationCard title="card 1"
                                     subTitle="{data>/cards/custom2/subTitle}"
                                     counter="{data>/cards/custom2/counter}"
                                     headerActive="false"
                                     manifest="{data>/cards/custom1/data}">
                <List items="{data>/cards/custom1/data}">
                    <StandardListItem title="{data>name}"/>
                </List>
                <!--  <control:layoutData>
                      <f:GridContainerItemLayoutData minRows="2"  columns="4"/>
                  </control:layoutData>-->
            </control:IntegrationCard>
            <control:IntegrationCard title="card 2"
                                     subTitle="{data>/cards/custom2/subTitle}"
                                     counter="{data>/cards/custom2/counter}"
                                     headerActive="false"
                                     width="100%"
                                     height="100%"
                                     manifest="{data>/cards/custom1/data}">
                <List items="{data>/cards/custom1/data}">
                    <StandardListItem title="{data>name}"/>
                </List>
                <!--  <control:layoutData>
                      <f:GridContainerItemLayoutData minRows="2" columns="4"/>
                  </control:layoutData>-->
            </control:IntegrationCard>
            <control:IntegrationCard title="card 3"
                                     subTitle="{data>/cards/custom2/subTitle}"
                                     counter="{data>/cards/custom2/counter}"
                                     headerActive="false"
                                     width="100%"
                                     height="100%"
                                     manifest="{data>/cards/custom1/data}">
                <List items="{data>/cards/custom1/data}">
                    <StandardListItem title="{data>name}"/>
                </List>
                <!--  <control:layoutData>
                      <f:GridContainerItemLayoutData minRows="2"  columns="4"/>
                  </control:layoutData>-->
            </control:IntegrationCard>
            <control:IntegrationCard title="card 4"
                                     subTitle="{data>/cards/custom2/subTitle}"
                                     counter="{data>/cards/custom2/counter}"
                                     headerActive="false"
                                     width="100%"
                                     height="100%"
                                     manifest="{data>/cards/custom1/data}">
                <List items="{data>/cards/custom1/data}">
                    <StandardListItem title="{data>name}"/>
                </List>
                  <control:layoutData>
                      <f:GridContainerItemLayoutData minRows="3"  columns="5"/>
                  </control:layoutData>
            </control:IntegrationCard>
            <control:IntegrationCard title="card 5"
                                     subTitle="{data>/cards/custom2/subTitle}"
                                     counter="{data>/cards/custom2/counter}"
                                     headerActive="false"
                                     width="100%"
                                     height="100%"
                                     manifest="{data>/cards/custom1/data}">
                <List items="{data>/cards/custom1/data}">
                    <StandardListItem title="{data>name}"/>
                </List>
                <!-- <control:layoutData>
                     <f:GridContainerItemLayoutData minRows="2"  columns="4"/>
                 </control:layoutData>-->
            </control:IntegrationCard>
            <control:IntegrationCard title="card 6"
                                     subTitle="{data>/cards/custom2/subTitle}"
                                     counter="{data>/cards/custom2/counter}"
                                     headerActive="false"
                                     width="100%"
                                     height="100%"
                                     manifest="{data>/cards/custom1/data}">
                <List items="{data>/cards/custom1/data}">
                    <StandardListItem title="{data>name}"/>
                </List>
                <!-- <control:layoutData>
                     <f:GridContainerItemLayoutData minRows="2"  columns="4"/>
                 </control:layoutData>-->
            </control:IntegrationCard>
        </control:FDashboard>
    </ScrollContainer>
</mvc:View>
