<mvc:View
        displayBlock="true"
        controllerName="vistex.controller.Home.Home"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.f"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        height="100%">
    <Page floatingFooter="true" enableScrolling="false">
        <customHeader>
            <Toolbar design="Info" style="Clear">
                <ToolbarSpacer/>
                <core:Icon color="#0854a0" size="1.5rem" src="sap-icon://bbyd-dashboard"/>
                <Title level="H1" text="VISTEX DASHBOARD" title="Resizable"/>
                <ToolbarSpacer/>
                <f:Avatar showBorder="true" backgroundColor="Transparent" displaySize="XS" initials="UI"
                          src="sap-icon://person-placeholder"/>
                <ToolbarSpacer width="2rem"/>
            </Toolbar>
        </customHeader>
        <f:DynamicPage id="myPanel" backgroundDesign="Solid">
            <!-- <f:header>
                 <f:DynamicPageHeader>
                     <f:content>
                         <Toolbar design="Transparent" style="Clear">
                             <Title id="myTitle" text="VDashboard" title="Resizable"/>
                             <ToolbarSpacer/>
                             <Button text="Save" press="onSaveGridConfig" type="Accept"/>
                         </Toolbar>
                     </f:content>
                 </f:DynamicPageHeader>
             </f:header>-->
        </f:DynamicPage>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <MessageStrip
                        id="myTitle"
                        class="sapUiTinyMargin"
                        text=""
                        type="None">
                </MessageStrip>
                <ToolbarSpacer/>
                <Button text="Save" press="onSaveGridConfig" type="Emphasized"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
